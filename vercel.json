{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "cd .. && npm install",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/auth/refresh", "dest": "/api/auth/refresh.ts", "methods": ["POST", "OPTIONS"] },
    { "src": "/api/auth/login", "dest": "/api/auth/login.ts", "methods": ["POST", "OPTIONS"] },
    { "src": "/api/auth/logout", "dest": "/api/auth/logout.ts", "methods": ["POST", "OPTIONS"] },
    { "src": "/api/auth/me", "dest": "/api/auth/me.ts", "methods": ["GET", "OPTIONS"] },
    { "src": "/api/auth/register", "dest": "/api/auth/register.ts", "methods": ["POST", "OPTIONS"] },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}
