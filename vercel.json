{
  "buildCommand": "npm install && cd api && node scripts/migrate-deploy.js && cd ../client && npm install && npm run build",
  "outputDirectory": "client/build",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/products/:slug",
      "destination": "/api/products?slug=:slug"
    },
    {
      "source": "/api/products/:slug/reviews",
      "destination": "/api/products.reviews?slug=:slug"
    },
    {
      "source": "/api/admin/orders/:id",
      "destination": "/api/admin/orders?id=:id"
    },
    {
      "source": "/api/admin/products/:id",
      "destination": "/api/admin/products.[id]?id=:id"
    },
    {
      "source": "/api/admin/orders/:id/status",
      "destination": "/api/admin/orders.[id].status?id=:id"
    },
    {
      "source": "/api/admin/orders/:id/delivery-pdf",
      "destination": "/api/admin/orders.[id].delivery-pdf?id=:id"
    },
    {
      "source": "/api/orders/:id/invoice",
      "destination": "/api/orders.[id].invoice?id=:id"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 10
    }
  }
}
