{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "cd .. && npm install",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/auth.refresh", "destination": "/api/auth.refresh" },
    { "source": "/api/auth.login", "destination": "/api/auth.login" },
    { "source": "/api/auth.logout", "destination": "/api/auth.logout" },
    { "source": "/api/auth.me", "destination": "/api/auth.me" },
    { "source": "/api/auth.register", "destination": "/api/auth.register" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}
